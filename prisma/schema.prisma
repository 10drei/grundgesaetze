// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Article {
  id        String      @id @default(uuid())
  number    String      @unique
  Paragraph Paragraph[]
}

model Paragraph {
  id            String   @id @default(uuid())
  text          String
  number        Int
  article       Article  @relation(fields: [articleNumber], references: [number])
  articleNumber String
  Phrase        Phrase[]
}

model Phrase {
  id          String        @id @default(uuid())
  text        String
  number      Int
  paragraph   Paragraph     @relation(fields: [paragraphId], references: [id])
  paragraphId String
  PhraseRight PhraseRight[]
}

model PhraseRight {
  id       String @id @default(uuid())
  phrase   Phrase @relation(fields: [phraseId], references: [id])
  phraseId String
  right    Right  @relation(fields: [rightId], references: [id])
  rightId  String
}

model Right {
  id          String        @id @default(uuid())
  text        String
  articlePath String        @default("")
  Sentence    Sentence[]
  PhraseRight PhraseRight[]
}

model Sentence {
  id       String  @id @default(uuid())
  text     String
  isWinner Boolean
  right    Right   @relation(fields: [rightId], references: [id])
  rightId  String
}
