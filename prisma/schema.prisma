// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Article {
  id        String      @id @default(uuid())
  number    String      @unique
  Paragraph Paragraph[]
}

model Paragraph {
  id            String   @id @default(uuid())
  text          String
  number        Int
  article       Article  @relation(fields: [articleNumber], references: [number])
  articleNumber String
  Phrase        Phrase[]
}

model Phrase {
  id          String    @id @default(uuid())
  text        String
  number      Int
  paragraph   Paragraph @relation(fields: [paragraphId], references: [id])
  paragraphId String
  Part        Part[]
}

model Part {
  id          String  @id @default(uuid())
  text        String
  textAltered Boolean
  phrase      Phrase  @relation(fields: [phraseId], references: [id])
  phraseId    String
}

model Right {
  id       String     @id @default(uuid())
  text     String
  Sentence Sentence[]
}

model Sentence {
  id       String  @id @default(uuid())
  text     String
  isWinner Boolean
  right    Right   @relation(fields: [rightId], references: [id])
  rightId  String
}
